pipeline {
    agent any // –í—ã–±–∏—Ä–∞–µ–º Jenkins –∞–≥–µ–Ω—Ç–∞, –Ω–∞ –∫–æ—Ç–æ—Ä–æ–º –±—É–¥–µ—Ç –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç—å —Å–±–æ—Ä–∫–∞: –Ω–∞–º –Ω—É–∂–µ–Ω –ª—é–±–æ–π

    triggers {
        pollSCM('H/5 * * * *') // –ó–∞–ø—É—Å–∫–∞—Ç—å –±—É–¥–µ–º –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –ø–æ –∫—Ä–æ–Ω—É –ø—Ä–∏–º–µ—Ä–Ω–æ —Ä–∞–∑ –≤ 5 –º–∏–Ω—É—Ç
    }

    tools {
        maven 'maven-3.9.9' // –î–ª—è —Å–±–æ—Ä–∫–∏ –±—ç–∫–µ–Ω–¥–∞ –Ω—É–∂–µ–Ω Maven
        jdk 'jdk' // –ò Java Developer Kit –Ω—É–∂–Ω–æ–π –≤–µ—Ä—Å–∏–∏
        nodejs 'NodeJS' // –ê NodeJS –Ω—É–∂–µ–Ω –¥–ª—è —Ñ—Ä–æ–Ω—Ç–∞
    }

    stages {
        stage('Build & Test backend') {
            steps {
                dir("backend") { // –ü–µ—Ä–µ—Ö–æ–¥–∏–º –≤ –ø–∞–ø–∫—É backend
                    sh 'mvn package' // –°–æ–±–∏—Ä–∞–µ–º –º–∞–≤–µ–Ω–æ–º –±—ç–∫–µ–Ω–¥
                }
            }

            post {
                success {
                    junit 'backend/target/surefire-reports/**/*.xml' // –ü–µ—Ä–µ–¥–∞–¥–∏–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã —Ç–µ—Å—Ç–æ–≤ –≤ Jenkins
                }
            }
        }

        stage('Build frontend') {
            steps {
                dir("frontend") {
                    sh 'npm install' // –î–ª—è —Ñ—Ä–æ–Ω—Ç–∞ —Å–Ω–∞—á–∞–ª–∞ –∑–∞–≥—Ä—É–∑–∏–º –≤—Å–µ —Å—Ç–æ—Ä–æ–Ω–Ω–∏–µ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏
                    sh 'npm run build' // –ó–∞–ø—É—Å—Ç–∏–º —Å–±–æ—Ä–∫—É
                }
            }
        }
        
        stage('Save artifacts') {
            steps {
                archiveArtifacts(artifacts: 'backend/target/sausage-store-0.0.1-SNAPSHOT.jar')
                archiveArtifacts(artifacts: 'frontend/dist/frontend/*')
            }
             post {
                success {
                    script {
                        def chatId = "398663910" // –£–∫–∞–∂–∏—Ç–µ chat_id Telegram-–∫–∞–Ω–∞–ª–∞
                        def botToken = "7642134915:AAFUUwcZ-GW7d0WBAJx7qxKqCjiRM6NrEpQ" // –£–∫–∞–∂–∏—Ç–µ —Ç–æ–∫–µ–Ω –≤–∞—à–µ–≥–æ Telegram-–±–æ—Ç–∞

                        sh """
                        curl -X POST \
                        https://api.telegram.org/bot${botToken}/sendMessage \
                        -d chat_id=${chatId} \
                        -d text="–°–±–æ—Ä–∫–∞ —É—Å–ø–µ—à–Ω–æ –∑–∞–≤–µ—Ä—à–µ–Ω–∞! üü¢\\n–ê—Ä—Ç–µ—Ñ–∞–∫—Ç—ã —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –≤ Jenkins.\\n–°–±–æ—Ä—â–∏–∫: ${env.BUILD_USER ?: 'Jenkins'}."
                        """
                    }  
                }  
            }
        }
    }
} 